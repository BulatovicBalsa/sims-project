<Window x:Class="Hospital.Views.Nurse.Medication.PrescriptionExaminationDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Views.Nurse.Medication"
        xmlns:viewModel="clr-namespace:Hospital.ViewModels.Nurse.Medication"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="PrescriptionExaminationDialogView"
        Height="300" Width="350"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Window.DataContext>
        <viewModel:PrescriptionExaminationViewModel/>
    </Window.DataContext>

    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBackground1}" Offset="0"></GradientStop>
                <GradientStop Color="{StaticResource PrimaryBackground2}" Offset="1"></GradientStop>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel x:Name="ControlBar"
                            Grid.Row="0"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Background="Transparent"
                            Margin="0,0,5,0"
                            MouseLeftButtonDown="ControlBar_OnMouseLeftButtonDown">

                    <Button x:Name="BtnClose" 
                            Style="{StaticResource ControlButton}"
                            Content="X"
                            Margin="3,0,3,0"
                            Click="BtnClose_OnClick"/>

                    <Button x:Name="BtnMinimize" 
                            Style="{StaticResource ControlButton}"
                            Content="-"
                            Margin="3,0,3,0"
                            Click="BtnMinimize_OnClick"/>

                </StackPanel>
            </Grid>

            <TextBlock Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Montserrat"
                       FontSize="25"
                       FontWeight="Bold">
                Schedule examination
            </TextBlock>

            <StackPanel Grid.Row="2"
                        Margin="20, 20, 20, 0">
                <TextBlock Style="{StaticResource MainTextBlock}" Text="{Binding DoctorName, StringFormat='Doctor: {0}'}"/>
                <TextBlock Style="{StaticResource MainTextBlock}">Date</TextBlock>
                <DatePicker Height="30" DisplayDateStart="{x:Static sys:DateTime.Today}" 
                            SelectedDate="{Binding SelectedDate}"/>
                <TextBlock Style="{StaticResource MainTextBlock}">Time</TextBlock>
                <ComboBox Height="30" ItemsSource="{Binding PossibleTimeslots, Mode=TwoWay}"
                          SelectedItem="{Binding SelectedTime}"/>
                <Button Style="{StaticResource ActionButton}" 
                        Content="Schedule examination"
                        Margin="0,20,0,0"
                        Command="{Binding ScheduleExaminationCommand}"/>
            </StackPanel>

        </Grid>
    </Border>

</Window>
