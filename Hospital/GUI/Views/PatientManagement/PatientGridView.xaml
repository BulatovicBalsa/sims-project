<UserControl x:Class="Hospital.GUI.Views.PatientManagement.PatientGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:patientManagement="clr-namespace:Hospital.GUI.ViewModels.PatientManagement"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.DataContext>
        <patientManagement:PatientGridViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Path=Patients}"
                  x:Name="PatientsDataGrid"
                  Style="{DynamicResource DataGridStyle}"
                  CellStyle="{DynamicResource DataGridCellStyle}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
                  RowStyle="{DynamicResource DataGridRowStyle}"
                  SelectedItem="{Binding SelectedPatient}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" IsReadOnly="True" Width="SizeToCells" Binding="{Binding Id}" />
                <DataGridTextColumn Header="First name" IsReadOnly="True" Width="*" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Last name" IsReadOnly="True" Width="*" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="JMBG" IsReadOnly="True" Width="SizeToCells" Binding="{Binding Jmbg}" />
                <DataGridTextColumn Header="Username" IsReadOnly="True" Width="*" Binding="{Binding Profile.Username}" />
                <DataGridTextColumn Header="Password" IsReadOnly="True" Width="*" Binding="{Binding Profile.Password}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <Button Content="Add" Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"
                    Command="{Binding AddPatientCommand}" />
            <Button Content="Update"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"
                    Command="{Binding UpdatePatientCommand}" />
            <Button Content="Delete"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"
                    Command="{Binding DeletePatientCommand}" />
            <Button Content="Medical record"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"
                    Command="{Binding ShowMedicalRecordCommand}" />
        </StackPanel>
    </Grid>
</UserControl>